{{#if isInput}}
  {{ember-theater/director/directable/menu/option/input
    choice=choice
    value=choice.input
    cancelKeys=cancelKeys
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')
  }}
{{else}}
  {{ember-theater/director/directable/menu/option/button
    choice=choice
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')
  }}
{{/if}}
