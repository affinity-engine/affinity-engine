{{#if mediaIsLoaded}}
  {{#each components as |componentName|}}
    {{component componentName
      isFocused=isFocused
      theaterId=theaterId
    }}
  {{/each}}
{{else}}
  {{component mediaLoader
    fixtures=fixtures
    isFocused=isFocused
    theaterId=theaterId
    complete=(action 'startGame')
  }}
{{/if}}
