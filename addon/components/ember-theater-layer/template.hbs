{{#each directables as |directable|}}
  {{component directable.componentType
    line=directable.line
    destroyDirectable=(action 'destroyDirectable' directable)}}
{{/each}}

{{#each layers as |layer|}}
  {{ember-theater-layer
    directables=layer.directables
    layers=layer.layers
    name=layer.name}}
{{/each}}
