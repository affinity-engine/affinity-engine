<div class="et-menu-bar-container {{decorativeClassNames}}">
  <div class="et-menu-bar {{configurableClassNames}}">
    {{#each components as |componentName|}}
      {{component componentName
        theaterId=theaterId
        openMenu=(action "openMenu" componentName)
      }}
    {{/each}}
  </div>
</div>

{{#if currentMenu}}
  {{component currentMenu
    theaterId=theaterId
    closeMenu=(action "closeMenu")
  }}
{{/if}}
