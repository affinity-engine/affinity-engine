{{#if isInput}}
  {{ember-theater/director/directable/choice/option/input
    choice=choice
    value=choice.input
    cancelKeys=cancelKeys
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')
  }}
{{else}}
  {{ember-theater/director/directable/choice/option/button
    activeIndex=activeIndex
    index=index
    choice=choice
    keyboardPriority=keyboardPriority
    moveDownKeys=moveDownKeys
    moveUpKeys=moveUpKeys
    focusDown=focusDown
    focusUp=focusUp
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')
  }}
{{/if}}
