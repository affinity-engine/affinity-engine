{{#each layerDirections as |direction|}}
  {{component direction.componentType
    line=direction.line
    fastboot=direction.fastboot
    fastbootResult=direction.fastbootResult
    destroyDirection=(action 'destroyDirection' direction)}}
{{/each}}

{{#each-in childLayers as |name directions|}}
  {{ember-theater/layer
    directions=directions
    name=name}}
{{/each-in}}
