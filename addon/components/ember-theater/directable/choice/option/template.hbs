{{#if isInput}}
  {{ember-theater/directable/choice/option/input
    choice=choice
    value=choice.input
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')}}
{{else}}
  {{ember-theater/directable/choice/option/button
    choice=choice
    choose=(action 'choose' choice)
    toggleInput=(action 'toggleInput')}}
{{/if}}
